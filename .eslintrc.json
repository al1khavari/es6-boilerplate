{
    "extends": "airbnb-base",
    "parser": "babel-eslint",
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "space-in-parens": ["warn", "always"],
        "no-underscore-dangle": "off",
        "max-len": ["warn", 200],
        "no-continue": "off",
        "no-param-reassign": "off",
        "no-mixed-operators": "off",
        "class-methods-use-this": "off",
        "import/prefer-default-export": "off"
    },
    "globals": {},
    "env": {
        "browser": true
    }
}
